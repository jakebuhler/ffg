<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tag %>
    <%= javascript_include_tag :defaults %>
    <%= render 'layouts/scripts' %>
    <%= render 'layouts/stylesheets'%>
    <title><%= title %></title>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header'%>
      <section>
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
