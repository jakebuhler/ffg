<div class="sidebar">
  <%= link_to 'edit', edit_tasting_path(@tasting) %> |
  <%= link_to 'delete', @tasting, :method => :delete,
                                  :confirm => 'Are you sure you want to delete this tasting?',
                                  :title => 'Delete Tasting of #{@tasting.beer.name}' %>
</div>

<h2><%= @title %></h2>

<p>
  <b>Rating:</b>
  <%= @tasting.rating %>
</p>

<p>
  <b>Taster:</b>
  <%= @tasting.taster.name %>
</p>

<p>
  <b>Comments:</b>
  <%= @tasting.comments %>
</p>

<p>
  <b>Tasted on:</b>
  <%= @tasting.tasted_on %>
</p>
