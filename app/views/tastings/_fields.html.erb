<%= render "shared/error_messages", :object => f.object %>
<div class="field">
  <%= f.label :beer_id %><br />
  <%= f.collection_select :beer_id, Beer.all, :id, :name %>
</div>
<div class="field">
  <%= f.label :taster_id %><br />
  <%= f.collection_select :taster_id, User.all, :id, :name %>
</div>
<div class="field">
  <%= f.label :rating %><br />
  <%= f.select :rating, options_for_select(Array.new(6) { |i| [i, i] }, f.object.rating) %>
</div>
<div class="field">
  <%= f.label :comments %><br />
  <%= f.text_area :comments %>
</div>
<div class="field">
  <%= f.label :tasted_on %><br />
  <%= f.date_select :tasted_on %>
</div>
